# Environment Variables Template for WisdomWealth
# Copy this file to .env and fill in your actual values
# DO NOT commit .env with real API keys to GitHub

# REQUIRED: Get your API key from https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# Application Settings
ENVIRONMENT=production
DATA_DIR=data
CHROMA_DIR=data/chroma_db
ENABLE_RETRIEVAL=true

# CORS Settings - Update with your frontend domains
ALLOWED_ORIGINS=https://your-frontend.onrender.com,https://your-app.vercel.app

# Optional Settings
LOG_LEVEL=INFO
RATE_LIMIT_REQUESTS_PER_MINUTE=60